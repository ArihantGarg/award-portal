model Applicant {
    id Int @id @default(autoincrement())
    name String
    ieeeMembership String
    grade String // Can maybe an enum
    section String // Can maybe an enum
    affiliation String
    email String
    password String // This will be the hashed password
    phone String
    joined DateTime
    last_login DateTime
}

model Reviewer {
    id Int @id @default(autoincrement())
    name String
    email String
    password String
    affiliation String
    joined DateTime
    last_login DateTime
}

model AwardCommittee {
    id Int @id @default(autoincrement())
    name String
    email String
    password String
    affiliation String
    joined DateTime
    last_login DateTime
}

model Admin {
    id Int @id @default(autoincrement())
    name String
    email String
    password String
    joined DateTime
    last_login DateTime
}

model Award {
    id Int @id @default(autoincrement())
    name String
    metric Json // Assessment Rubrics: Originality, Technical Content, Clarity of Presentation, Impact, Relevance of the topic to IEEE goals
    questions Json
    posted DateTime
}

model Application {
    id Int @id @default(autoincrement())
    awardId Int
    applicantId Int
    response Json // Answer to the questions asked for the specific award
    submitted DateTime
}

model Assessment {
    id Int @id @default(autoincrement())
    applicationId Int
    review Json // The actual score given by the reviewer
    submitted DateTime
}